
{% import "modals.njk" as modals %}
<!DOCTYPE html>
<html>
    <head>  
        <title>Plywood - Jira Worklog Management</title>
        <link href='/stylesheets/style.css' rel='stylesheet' />
        <link href='/stylesheets/dark.css' rel='stylesheet' />
        <meta http-equiv='Content-Security-Policy' content="font-src data:" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="jira-url" content="{{ jiraUrl }}">
        <meta charset='utf-8' />
        <link
        rel="stylesheet"
        href="/stylesheets/choices.min.css"
        />

        <link type="image/png" sizes="96x96" rel="icon" href="/images/icons8-plywood-96.png">

        <script src="/javascripts/choices.min.js"></script>
        <script src=" https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js "></script>
        <script src="/javascripts/fullcalendar.min.js" ></script>
        <script src="/javascripts/moment.min.js" ></script>
        <script src="/javascripts/moment-duration-format.js"></script>

    </head>

    <body>
        {{ modals.modals() }}
        <div id='calendar'></div>
        <footer class="unselectable">

            <div id='config-container' class="footer-container">
                <button onclick="toggleConfigModal()">⚙️</button>
            </div>
            <div id="about-section"><a href="#" onclick="showAboutModal();">About</a></div>
            <div id='total-time' class="footer-container"><h3>Total time : </h2><div id='total-time-value'></div></div>
            <div id='loading-container' class="footer-container"><img id="loading" src="/images/icons8-dots-loading.gif" /></div>
            <div id='timer-container' class="footer-container">
                <span id="timer-duration" style="display:none">0m</span>
                <button
                    id="open-timer-modal-btn"
                    title="Timer"
                    onclick="toggleTimerModal()"
                >
                ⏱️
                </button>

            </div>
            <div id='weekend-container' class="footer-container"><input type="checkbox" id="include-weekends" name="include-weekends"><label for="include-weekends">Weekends</label></div>
            <div id='zoom-container' class="footer-container"><input type="range" min="1" max="4" step="1" value="2" id="zoom-range" name="zoom-range"><output for="zoom-range" id="zoom-output">15 minutes / slot</output></div>

        </footer>
        <script src="/javascripts/plywood/main.js" type="module" ></script>
        <script src="https://unpkg.com/@popperjs/core@2"></script>
        <script src="https://unpkg.com/tippy.js@6"></script>
    </body>
</html>